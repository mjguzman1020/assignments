B.
netBalance = float(input("Enter the net balance: "))
payment = float(input("Enter the payment amount: "))
d1 = int(input("Enter the number of days in the billing cycle: "))
d2 = int(input("Enter the number of days payment is made before the billing cycle ends: "))
interestRatePerMonth = float(input("Enter the monthly interest rate in percentage: "))
rate = interestRatePerMonth / 100
averageDailyBalance = (netBalance * d1 - payment * d2) / d1

interest = averageDailyBalance * interestRatePerMonth

print("Average Daily Balance: ", averageDailyBalance)
print("Interest for this billing cycle: ", interest)
C.
def main():
    # Input average speeds

    x = float(input("Enter the average speed of Car A (mph, west): "))

    y = float(input("Enter the average speed of Car B (mph, south): "))

    # Input elapsed time

    hours = int(input("Enter elapsed hours: "))

    minutes = int(input("Enter elapsed minutes: "))

    # Convert total time to hours

    total_time = hours + minutes / 60.0

    # Distance traveled by each car

    distance_a = x * total_time

    distance_b = y * total_time

    # Distance between the two cars (Pythagorean theorem)

    distance = math.sqrt(distance_a ** 2 + distance_b ** 2)

    print(f"\nThe shortest distance between the two cars is {distance:.2f} miles.")
